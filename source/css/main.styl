@import "normalize"

*
  box-sizing border-box
html, body
  font-family 'Dosis', sans-serif
  -webkit-font-smoothing antialiased
  height 100%

//////////////// PRELOADER /////////////////
section, nav, header
  visibility hidden
.pace-done
  section, nav, header
    visibility visible

.pace
  -webkit-pointer-events none
  pointer-events none

  -webkit-user-select none
  -moz-user-select none
  user-select none

  position absolute
  left 0
  top 0
  width 100%
  height 100%
  background black
  z-index 99

.pace-inactive
  animation hideLoading 1s ease-out forwards


.pace .pace-progress
  background #fff
  position fixed
  z-index 2000
  top 0
  right 100%
  width 100%
  height 2px

@keyframes hideLoading
  0%
    opacity 1
  99%
    opacity 0
    display block
  100%
    opacity 0
    display none
  

//////////////// Global styles //////////////
a
  color black

nav
  position absolute
  right 0
  top 0
  padding 30px
  z-index 5
  a
    text-decoration none
    text-transform uppercase
    font-size 14pt
    transition opacity 0.2s ease-out
    display inline-block
    color white
    margin 0 20px
    position relative
    &:last-child
      margin-right 0
    &::after
      content ""
      position absolute
      left 0
      bottom 0
      width 100%
      height 1px
      border-bottom solid 1px white
      transition opacity 0.3s ease-out
      opacity 0
    &:hover:not(.selected)
      opacity 0.7
    &:hover::after, &.selected::after
      opacity 1
header
  height 500px
  background black center center no-repeat
  background-size cover
  background-position center 0
  background-attachment fixed
  position relative
  box-shadow inset 0 0 0 1000px rgba(0,0,0,.2)

  h1
    color white
    text-align center
    text-transform uppercase
    font-family 'Dosis', sans-serif
    line-height 1em
    font-weight 200
    font-size 70px
    display block
    position absolute
    width 100%
    top 50%
    margin 0
    transform translate(0%, -50%)

#parallax-container
  position fixed
  z-index -1
  width 100%
  height 100%

  .parallax-element
    position absolute
    overflow hidden
    left 0
    top 0

    img
      min-width 100%
      min-height 100%
      width 100%
      left 0
      top 0
      bottom 0
      right 0
      margin auto

h1 
//  font-family 'Montserrat', sans-serif
  margin-top 40px
  font-size 3em;
  text-align center;
  letter-spacing 0.01em;
  font-weight normal

footer
  margin-top 10px
  font-size small
  padding 15px


$content-width = 800px

