section.featured-work
  height 100%
  position relative
  box-shadow inset 0 0 100px 500px rgba(0,0,0,.4)
  border-bottom solid 1px black
  background-size cover
  background-position 0 0
  overflow hidden

  .bg
    margin auto
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index -1
    max-width 130%
    max-height 130%
    min-width 100%
    min-height 100%

  h1
    position absolute
    width 100%
    top 50%
    transform translateY(-50%)
    font-size 3.5em
    font-weight 200
    a
      color white
      text-decoration none
      position relative
      &::after
        content ""
        position absolute
        left 0
        bottom 0
        width 100%
        height 1px
        background white
        border-bottom solid 1px white
        transition opacity 0.3s ease-out, transform 0.5s ease-out
        opacity 0
        transform translateY(5px)
      &:hover::after
        opacity 1
        transform translateY(0px)
