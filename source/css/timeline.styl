header.timeline
  box-shadow inset 0 0 0 1000px rgba(0,0,0, 0.4)

section#timeline
  width $content-width
  margin 50px auto

  $width = 251px

  ul.awarded
    list-style none
    > li
      display inline-block
      vertical-align top
      width $width
    a
      background #555 center center
      width $width
      height ($width/16*9)
      background-size cover
      position relative
      display inline-block
      overflow hidden
    ul
      vertical-align top
      margin-bottom 10px
      li
        display inline-block
        margin 0 2px 4px 0
        padding 3px 6px
        background #eaeaea

  ul.noteworthy
    list-style none
    li
      overflow hidden
      display inline-block
      background #555 center center
      width $width
      height ($width/16*9)
      background-size cover
      position relative
      transition filter 0.3s ease-out
      &.disabled:hover
        filter saturate(0)

    a
      text-decoration none
      display block
      width 100%
      height 100%

  ul
    margin 0
    padding 0
    li:hover
      .name
        top 0
      .bottom
        bottom 0
    // Initial state
    .name
      top -30px
      background linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,.1))
    .bottom
      bottom 0
      font-size 0.9em
      line-height 1.5em
      background linear-gradient(to top, rgba(0,0,0,0.5), rgba(0,0,0,0.2))
  .name, .bottom
    display block
    color white
    background rgba(0, 0, 0, 0.5)
    padding 4px 6px
    position absolute
    left 0
    width 100%
    transition top 0.3s ease-out, bottom 0.3s ease-out
