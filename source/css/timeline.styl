header.timeline
  background-image url("../img/timeline-header.jpg")
  box-shadow inset 0 0 0 1000px rgba(0,0,0, 0.4)

section#timeline
  width $content-width
  margin 50px auto

  .intro
    padding 0 10px

  ul
    margin 0
    padding 0
  li
    $width = 251px
    display inline-block
    margin 10px 0 0 10px
    background #555 center center
    width $width
    height ($width/16*9)
    background-size cover
    position relative
    overflow hidden
    transition filter 0.3s ease-out
    &.disabled:hover
      filter saturate(0)
    &:hover
      .name
        top 0
      .bottom
        bottom 0
    // Initial state
    .name
      top -30px
      background linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,.1))
    .bottom
      bottom 0
      font-size 0.9em
      line-height 1.5em
      background linear-gradient(to top, rgba(0,0,0,0.5), rgba(0,0,0,0.2))
  a
    text-decoration none
    display block
    width 100%
    height 100%

  .name, .bottom
    display block
    color white
    background rgba(0, 0, 0, 0.5)
    padding 4px 6px
    position absolute
    left 0
    width 100%
    transition top 0.3s ease-out, bottom 0.3s ease-out
